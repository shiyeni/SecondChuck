<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="SecondChuckNorrisApp1.MainPage"
             BackgroundImageSource = "pain.jpg"
             Title="Home">


    <StackLayout >
        
        
        <!-- Place new controls here -->
        <Label Text="Ongeziwe Is Cooking Some Code !!" 
           TextColor="White" 
           FontSize="20"  
           Margin="30"
           HorizontalOptions="Center"
           VerticalOptions="Center" />

        <SearchBar Placeholder=" Search.." BackgroundColor="White" Margin="10"/>

        <ContentView BackgroundColor="White" Padding="10" Margin="10" >
            
        <Label x:Name="JokeLabel" HeightRequest="200" FontSize="20" TextColor="Black"/>
        </ContentView>
        <Button  x:Name="JokeButton" Text="Get A Joke" Clicked="JokeButton_Clicked" BackgroundColor="White" CornerRadius="10" Margin="10" TextColor="Black" />
        <Button x:Name="CartButton" Text="Category" Clicked="CartButton_Clicked" BackgroundColor="White" CornerRadius="10" Margin="10" TextColor="Black" />

    </StackLayout>

</ContentPage>
